@using Codebase.Entities.DTOs
@model AddOrderDTO

@{
    ViewData["Title"] = "Ürün Çıkışı Yap";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="ProductName" />
    <table class="table table-bordered mt-5">
        <thead>
            <tr>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Müşteri Adı</th>
                <th scope="col">Adedi</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.ProductName
                </td>
                <td>
                    @Html.DropDownListFor(m => m.CustomerId, Model.CustomersSelectList, "- Müşteri Seçiniz.",
                    new { @class = "form-control" })
                </td>
                <td>
                    <input asp-for="OrderQuantity" class="form-control" />
                    <span asp-validation-for="OrderQuantity" class="text-danger"></span>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="form-group row">
        <div class="col-12">
            <button class="btn btn-primary">Çıkış Yap</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-success">Ürün Listesi</a>
        </div>
    </div>
</form>