@using Codebase.Entities
@model List<CustomerProduct>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="col-12">
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-5">Ürün Listesi</a>
    </div>
    <table class="table table-bordered mt-2">
        <thead>
            <tr>
                <th scope="col">Müşteri Adı</th>
                <th scope="col">Ürüm Adı</th>
                <th scope="col">Adedi</th>
                <th scope="col">Tarihi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Customer.Name</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Date</td>
                </tr>
            }
        </tbody>
    </table>
</div>

